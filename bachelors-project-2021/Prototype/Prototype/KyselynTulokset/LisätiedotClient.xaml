<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Prototype.LisÃ¤tiedotClient"
    Title="Tulokset"
    BackgroundColor="#FFEA7F">

    <ContentPage.Content>
        <StackLayout
            HorizontalOptions="Center"
            VerticalOptions="FillAndExpand"
            Spacing="20"
            Padding="0,150,0,0">

            <Label
                Text="TULOKSET"
                FontSize="40"
                FontAttributes="Bold"
                TextColor="Black"
                FontFamily="BebasNeue"
                HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding Results}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout
                        Orientation="Horizontal"
                        ItemSpacing="20" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout HorizontalOptions="Center" Spacing="8">
                            <Image Source="{Binding Image}"
                                   HeightRequest="70"
                                   HorizontalOptions="Center"/>
                            <Grid WidthRequest="50" HeightRequest="200">
                                <Frame
                                    HeightRequest="{Binding Scale}"
                                    WidthRequest="55"
                                    BackgroundColor="#feba4f"
                                    CornerRadius="0"
                                    Padding="0"
                                    HasShadow="False"
                                    VerticalOptions="End"
                                    HorizontalOptions="FillAndExpand">
                                    <Label Text="{Binding Amount}"
                                           TextColor="Black"
                                           FontSize="36"
                                           FontAttributes="Bold"
                                           FontFamily="RobotoMedium"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
                            </Grid>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <BoxView
                HeightRequest="3"
                BackgroundColor="#C381FD"
                HorizontalOptions="FillAndExpand"
                Margin="0,-20,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>