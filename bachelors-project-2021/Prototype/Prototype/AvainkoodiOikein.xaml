    <ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.AvainkoodiOikein"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#ffea7f">
    <AbsoluteLayout Padding="0"
                  HorizontalOptions="FillAndExpand"
                  VerticalOptions="FillAndExpand">
        <StackLayout AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                     AbsoluteLayout.LayoutFlags="All"
                     BackgroundColor="#ffea7f">
            <StackLayout Padding="10">
                <Image Source="logo_no_background"
                       HorizontalOptions="Center"
                       VerticalOptions="CenterAndExpand"
                       WidthRequest="50"
                       HeightRequest="50"
                       Margin="0,150,0,60"
                       Aspect="AspectFit"
                       Scale="6.5" />

                <!-- Grid containing the Entry field and the Image (lock) -->
                <Grid HorizontalOptions="CenterAndExpand"
                      Margin="0,110,0,0"
                      HeightRequest="380"
                      WidthRequest="300"
                      BackgroundColor="#89e077">
                    <Frame BackgroundColor="#feba4f"
                           CornerRadius="7"
                           HasShadow="False"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="FillAndExpand"
                           Margin="-20,35,-20,170">
                        <Grid HorizontalOptions="Center"
                              VerticalOptions="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image Source="avattulukko.png"
                                   Grid.Row="0"
                                   Grid.Column="1"
                                   WidthRequest="200"
                                   HeightRequest="200"
                                   HorizontalOptions="End"
                                   VerticalOptions="Center"
                                   Aspect="AspectFit"
                                   Margin="50,0,40,0">
                            </Image>

                        </Grid>
                    </Frame>
                </Grid>
            </StackLayout>
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>
