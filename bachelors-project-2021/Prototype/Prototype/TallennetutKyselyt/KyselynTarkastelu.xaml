<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.KyselynTarkastelu"
             Title="Tarkastele kysely채"
             BackgroundColor="#ffea7f"
             >
    <!-- poista kysely -nappi-->

    <ContentPage.ToolbarItems>
        <ToolbarItem    x:Name="PoistaButton"
			            Text="Poista"
                        Clicked="PoistaClicked" />
    </ContentPage.ToolbarItems>

    <NavigationPage.TitleView >



        <StackLayout Orientation="Horizontal" VerticalOptions="Center">

            <Label Text="Kyselyn tarkastelu"
                   x:Name="title"
                   Margin="0 ,0,0,0"
                   FontSize="20" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"  
                   VerticalOptions="Center"/>
        </StackLayout>



    </NavigationPage.TitleView>


    <AbsoluteLayout
        Padding="0"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand">

        <StackLayout AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                     AbsoluteLayout.LayoutFlags="All" 
                     >
            <StackLayout Margin="20"
                          HorizontalOptions="FillAndExpand"
                         VerticalOptions="FillAndExpand">

                <Label Margin="0,10,0,10"
                    Text="{Binding introMessage}"
                    TextColor="Black"
                    FontAttributes="Bold"
                    FontSize="22"/>

                <Label Margin="0,10,0,10"
                        Text="{Binding roomCode}"
                        TextColor="Black"
                        FontAttributes="Bold"
                        FontSize="22"/>

                <CollectionView ItemsSource="{Binding Emojit}"
                   HeightRequest="400" >

                <CollectionView.ItemTemplate >
                    <DataTemplate >
                        <Grid Padding="5"
                              RowDefinitions="Auto, *"
                             ColumnDefinitions="Auto, *">


                            <!-- Emojit -->
                                <Image Grid.RowSpan="1"
                                       Source="{Binding Item.ImageSource}"
                                       Aspect="AspectFill"
                                       HeightRequest="60"
                                       WidthRequest="60" />

                                <Button Grid.Column="2"
                                        Grid.ColumnSpan="3"
                                        Margin="10,10,10,0"
                                        VerticalOptions="Center"
                                        HorizontalOptions="CenterAndExpand"
                                        WidthRequest="260"
                                        HeightRequest="45"
                                        FontSize="20"
                                        TextColor="Black"
                                        FontAttributes="Bold"
                                        BackgroundColor="#feba4f"
                                        BorderColor="Transparent"
                                        Text="Toimenpiteet" 
                                        Clicked="btnPopupButton_Clicked"
                                />


                                <!-- drop down menu -->
                        
                                <Frame
                                Grid.Column="2"
                                Grid.ColumnSpan="3"
                                Grid.Row="1"                               
                               
                                VerticalOptions="Center"
                                HorizontalOptions="Center"
                                HeightRequest="230"
                                Padding="10"
                                HasShadow="True"
                                WidthRequest="160"
                                BorderColor="Gray"
                                
                                BackgroundColor="WhiteSmoke" 
                                IsVisible="false">

                                    <StackLayout HorizontalOptions="Center" VerticalOptions="Center"
									
                                    Orientation="Vertical"
                                    WidthRequest="200">


                                        <CollectionView x:Name="Collection" 
                                                        ItemsSource= "{Binding ActivityChoises}"
                                                        SelectionMode="None">

                                            <CollectionView.ItemTemplate>
                                                <DataTemplate>

                                                    <Grid Padding="1"
                                                          RowDefinitions="Auto, *"
                                                          ColumnDefinitions="Auto, *"  >

                                                        <Label 
                                                            Text="{Binding .}" 
                                                            TextColor="Black"
                                                            FontSize="18"/>


                                                        <!-- Separator -->
                                                        <BoxView HeightRequest="1"
                                                                BackgroundColor="DarkGray"
                                                                Grid.ColumnSpan="2"
                                                                Grid.Row="2"
                                                                VerticalOptions="End"/>


                                                    </Grid>

                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </StackLayout>

                                </Frame>


                            </Grid>
                        
                        
                        
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

                <Grid RowDefinitions="Auto, Auto"
                    ColumnDefinitions="Auto, Auto"
                    ColumnSpacing="20"
                    HorizontalOptions="Center"
                    Margin="0,50,0,0">
                    <Button Grid.Column="0" 
                            Text="Jaa kysely"
                            TextColor="Black"
                            FontAttributes="Bold"
                            Clicked="JaaClicked"
                            FontSize="20"
                            BorderColor="Transparent"
                            HeightRequest="65"
                            CornerRadius="10"
                            WidthRequest="160"
                            BackgroundColor="#feba4e"/>

                    <Button Grid.Column="1" 
                            x:Name="MuokkaaButton"
							Text="Muokkaa"
                            TextColor="Black"
                            FontAttributes="Bold"
                            FontSize="20"
                            Clicked="MuokkaaClicked"
                            BackgroundColor="#feba4f"
                            BorderColor="Transparent"
                            HeightRequest="65"
                            WidthRequest="160"
                            CornerRadius="10"/>
                </Grid>

        </StackLayout>
        </StackLayout>


        <!--  Popup kyselyn poistamiselle-->
        <!--  Popup Area  -->
        <ContentView
                x:Name="popupSelection"
                Padding="10,0"
                AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                AbsoluteLayout.LayoutFlags="All"
                BackgroundColor="#C0808080"
                IsVisible="false">

            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <StackLayout
                    BackgroundColor="#feba4f"
                    HeightRequest="165"
                    Orientation="Vertical"
                    WidthRequest="300">

                    <!--  X button placeholder -->
                    <ImageButton Source="https://www.rawshorts.com/freeicons/wp-content/uploads/2017/01/black_prodpictxmark_1484336297-1.png"
                                  HeightRequest="30"
                                  WidthRequest="30" 
                                  VerticalOptions="Start"
                                  BackgroundColor="Transparent"
                                  HorizontalOptions="End"
                                  Clicked="X_Clicked"/>

                    <Label Text="Poistetaanko kysely?" 
                           FontSize="24" 
                           TextColor="Black" 
                           Margin="0,10,0,0" 
                           HorizontalOptions="Center" 
                           VerticalOptions="CenterAndExpand"/>



                    <AbsoluteLayout Margin="20"  VerticalOptions ="EndAndExpand" HorizontalOptions="CenterAndExpand">
                        <Grid Margin="0,0,0,0">
                            <Button Grid.Column="1"   
                                     TextColor="Black"
                                     FontAttributes="Bold"
                                     BackgroundColor="Transparent"
                                     BorderColor="Transparent"                                  
                                     Text="Kyll채"
                                     Margin="-50,10,10,10"
                                     Clicked="Kyll채_Clicked"/>
                            <Button                               
                                     Text="Ei" 
                                     TextColor="Black"
                                     FontAttributes="Bold"
                                     BackgroundColor="Transparent"
                                     BorderColor="Transparent"
                                     Margin="50,10,10,10"
                                     Clicked="Ei_Clicked" />
                        </Grid>

                    </AbsoluteLayout>
                </StackLayout>

            </StackLayout>

        </ContentView>
        <!--  Popup Area  ends -->
        
        
    </AbsoluteLayout>
</ContentPage>