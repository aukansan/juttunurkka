<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.Opettajanhuone"
             BackgroundColor="#ffea7f"
             Title="Juttunurkka">

    <StackLayout VerticalOptions="FillAndExpand" Spacing="50" Padding="0,100,0,0">

        <Grid 
              RowDefinitions="Auto, Auto"
              ColumnDefinitions="Auto, Auto">


            <Image Grid.Column="1"
                   Source="gear"     
                   HeightRequest="45"
                   WidthRequest="45"
                   Scale="1.3"
                   Margin="-165,0,0,0"       
            />

            <Label Grid.Column="2"
                Text="Opettajanhuone"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                HorizontalTextAlignment="Center"
                FontAttributes="Bold"
                FontSize="30"
                TextColor="Black"
                Padding="100,0,0,0"  
            />

        </Grid>


        <Grid RowDefinitions="Auto, Auto"
            ColumnDefinitions="Auto, Auto"
            VerticalOptions="End"
            Padding="10"
            HorizontalOptions="CenterAndExpand">

            <Button Grid.Row="0"
                Text="Luo uusi juttunurkka"
                Clicked="UusiJuttunurkkaClicked"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                FontSize="25"
                Margin="0,0,0,0"
                CornerRadius="10"
                HeightRequest="100"
                TextColor="Black"
                FontAttributes="Bold"
                BorderColor="Transparent"
                WidthRequest="340"
                BackgroundColor="#feba4f"
             />

            <Button Grid.Row="1"
                    Text="Arkisto"
               VerticalOptions="CenterAndExpand" 
               HorizontalOptions="CenterAndExpand" 
               BackgroundColor="#feba4f"
               FontSize="25"
               BorderColor="Transparent"
               Margin="0,30,0,0"
               CornerRadius="10"
               HeightRequest="100"
               FontAttributes="Bold"
               TextColor="Black"
               WidthRequest="340"
               Clicked="ArkistoClicked"
            />
        </Grid>

    </StackLayout>
</ContentPage>