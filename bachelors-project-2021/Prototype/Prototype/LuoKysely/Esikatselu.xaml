<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.Esikatselu"
             BackgroundColor="#ffea7f"
             Title="Juttunurkka">

    <ContentPage.Content>
        <StackLayout Padding="0,60,0,0" Spacing="20" HorizontalOptions="Center">

            <!-- Otsikko -->
            <Label Text="Esikatselu"
                   FontAttributes="Bold"
                   FontSize="30"
                   TextColor="Black"
                   HorizontalOptions="Center"/>

            <!-- Intro Message Button -->
            <Button Text="{Binding introMessage}"
                    TextColor="Black"
                    BorderColor="#4383EF"
                    FontAttributes="Bold"
                    BackgroundColor="White"
                    FontSize="18"
                    CornerRadius="10"
                    HeightRequest="50"
                    BorderWidth="1"
                    WidthRequest="340"/>

            <!-- Aktiviteetit-kehys -->
            <Frame BorderColor="#4383EF"
                   BackgroundColor="White"
                   CornerRadius="10"
                   Padding="10, 25, 10, 25"
                   WidthRequest="340"
                   MaximumHeightRequest="360">

                <StackLayout Spacing="15">

                    <Label Text="Valitut aktiviteetit"
                           FontAttributes="Bold"
                           FontSize="18"
                           HorizontalOptions="Center"
                           TextColor="Black"/>

                    <!-- Aktiviteettilista -->
                    <CollectionView ItemsSource="{Binding Emojit}"
                                    SelectionMode="None"
                                    HeightRequest="300">

                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="25"/>
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout Orientation="Horizontal" Spacing="10">

                                    <!-- Emoji -->
                                    <Image Source="{Binding Item.ImageSource}"
                                           WidthRequest="30"
                                           HeightRequest="30"
                                           VerticalOptions="Start"/>

                                    <!-- Aktiviteettien nimet -->
                                    <StackLayout>
                                        <Label Text="{Binding ActivityChoises[0]}" FontSize="18" TextColor="Black" LineBreakMode="WordWrap" WidthRequest="280" HorizontalTextAlignment="Start"/>
                                        <Label Text="{Binding ActivityChoises[1]}" FontSize="18" TextColor="Black" LineBreakMode="WordWrap" WidthRequest="280" HorizontalTextAlignment="Start"/>
                                    </StackLayout>

                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </StackLayout>
            </Frame>

            <!-- Avainkoodi -->
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="Center"
                         Spacing="20">
                <Label Text="Avainkoodi"
                       FontSize="18"
                       VerticalOptions="Center"
                       FontAttributes="Bold"
                       TextColor="Black"/>
                <Frame
                    BorderColor="#4383EF"
                    CornerRadius="10">
                    
                    <Label Text="{Binding RoomCode}"
                       FontSize="18"
                       TextColor="Black"
                       HorizontalOptions="Start"
                       WidthRequest="60"
                       HeightRequest="20"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"/>
                </Frame>
            </StackLayout>

            <!-- Napit -->
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="Center"
                         Spacing="20"
                         Margin="0,20,0,0">

                <Button Text="Valmis"
                        BackgroundColor="#feba4e"
                        TextColor="Black"
                        CornerRadius="10"
                        BorderColor="Transparent"
                        HeightRequest="50"
                        WidthRequest="150"
                        FontAttributes="Bold"
                        FontSize="19"
                        Clicked="ValmisButtonClicked"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>