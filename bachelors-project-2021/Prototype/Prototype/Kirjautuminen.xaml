<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.Kirjautuminen"
             Title="Juttunurkka"
             BackgroundColor="#ffea7f"
             >

    <StackLayout VerticalOptions="CenterAndExpand" Spacing="10" Padding="0,0,0,50">
        <Label Text="Kirjaudu sisään opettajanhuoneeseen"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                HorizontalTextAlignment="Center"
                FontAttributes="Bold"
                FontSize="30"
                TextColor="Black"
                Padding="0,0,0,40"
             />

        <Label Text="Käyttäjätunnus"
               FontAttributes="Bold"
                VerticalOptions= "EndAndExpand" 
                HorizontalOptions="StartAndExpand"
               FontSize="20"
               Margin="80,0,0,0"
             />
        <Entry x:Name="txtUsername" TextColor="black" PlaceholderColor="Gray" HeightRequest="50"
                WidthRequest="250" HorizontalOptions="CenterAndExpand"></Entry>
        
        <Label Text="Salasana"
               FontAttributes="Bold"
                VerticalOptions="EndAndExpand" 
                HorizontalOptions="StartAndExpand"
               FontSize="20"
               Margin="80,0,0,0"
             />

        <Entry x:Name="txtPassword" IsPassword="True" TextColor="black" PlaceholderColor="Gray" HeightRequest="50"
                WidthRequest="250" HorizontalOptions="CenterAndExpand"></Entry>
       
        
        <Button  
                Text="Kirjaudu"
                FontAttributes="Bold"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                FontSize="19"
              Margin="20,40,10,5"
              TextColor="Black"
              CornerRadius="10"
              HeightRequest="50"
              WidthRequest="255"
              BackgroundColor="#feba4f"
              BorderWidth="0.1"
              BorderColor="Transparent"
              Clicked="KirjauduClicked"/>

    </StackLayout>

</ContentPage> 